<div class="newest">
  <h2 class="underlined"> Newest </h2>
  <div class="cards-container">
    <%# This button is going to allow to click on the image and redirect to the laptop.id path %>
    <% @laptops.each do |laptop| %>
      <div class="laptop-card">
        <%= cl_image_tag(laptop.photo.key, :class=>"laptop-image", :alt=>"laptop image", :width=>350, :height=>250) %>
        <div class="specs">
          <p class ="laptop-title"><b><%= laptop.brand %> | <%= laptop.model %></b></p>
          <p class ="laptop-price"><b><%= laptop.price %></b></p>
          <button class="btn-rent">Rent</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

